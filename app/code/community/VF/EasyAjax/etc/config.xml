<config>
    <global>
        <models>
            <easyAjax>
                <class>VF_EasyAjax_Model</class>
            </easyAjax>
            <core>
                <rewrite>
                    <message>VF_EasyAjax_Model_Core_Message</message>
                    <message_collection>VF_EasyAjax_Model_Core_Message_Collection</message_collection>
                </rewrite>
            </core>
        </models>
    </global>
    <frontend>
        <events>
            <controller_action_layout_render_before>
                <observers>
                    <easyAjax_get_json>
                        <class>easyAjax/observer</class>
                        <method>getJson</method>
                    </easyAjax_get_json>
                </observers>
            </controller_action_layout_render_before>
            <controller_response_redirect>
                <observers>
                    <easyAjax_get_json>
                        <class>easyAjax/observer</class>
                        <method>getJson</method>
                    </easyAjax_get_json>
                </observers>
            </controller_response_redirect>
            <http_response_send_before>
                <observers>
                    <easyAjax_get_json>
                        <class>easyAjax/observer</class>
                        <method>getJson</method>
                    </easyAjax_get_json>
                </observers>
            </http_response_send_before>
        </events>
        <layout>
            <updates>
                <vf_eastAjax>
                    <file>easy_ajax.xml</file>
                </vf_eastAjax>
            </updates>
        </layout>
    </frontend>
